@model List<HotelProjectWebUI.Models.Role.RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>AssignRole</h1>
<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input  type="hidden" asp-for="@Model[i].RoleID"/>
            <input type="hidden" asp-for="@Model[i].RoleName" />
            <input type="checkbox" asp-for="@Model[i].RolesExist" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].RolesExist">@Model[i].RoleName</label>

        </div>
    }
    <button class="btn btn-succes"> Kulanıcı İçin Rolleri Güncelle</button>
</form>