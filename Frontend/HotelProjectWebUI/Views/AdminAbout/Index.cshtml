@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Index</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık 1</th>
        <th>Başlık 2</th>
        <th>Yazı</th>
        <th>Oda Toplamı</th>
        <th>Çalışan Toplamı</th>
        <th>Müşteri Toplamı</th>
       
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.Title1</td>
            <td>@item.Title2</td>
            <td>@item.RoomCount</td>
            <td>@item.staffCount</td>
            <td>@item.CustomerCount</td>
            <td><a href="/AdminAbout/UpdateAbout/@item.AboutID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>

