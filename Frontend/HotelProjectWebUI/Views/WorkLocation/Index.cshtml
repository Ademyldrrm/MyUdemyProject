@model List<ResultWorkLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    
        <tr>
            <th>#</th>
            <th>Lokasyon Adı</th>
            <th>Şehir</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.WorkLocationID</td>
                <td>@item.WorkLocationName</td>
                <td>@item.WorkLocationCity</td>
                <td><a href="/WorkLocation/DeleteWorkLocation/@item.WorkLocationID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
                <td><a href="/WorkLocation/UpdateWorkLocation/@item.WorkLocationID" class="btn mb-1 btn-rounded btn-outline-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>

</table>
<br />
<a href="/WorkLocation/AddWorkLocation/" class="btn btn-primary">Yeni Lokasyon Kaydı</a>

